SHELL = @SHELL@

##############################################################################
# makefile.in
#
# DESCRIPTION
#    Makefile template for configure to use to create Makefile that makes and
#    installs degrib
#
# HISTORY
#    Created by Albion Taylor, Aug, 2006
#    degrib created 5/2003 Arthur Taylor (MDL): Created.
#
# NOTES
##############################################################################

############################
# SYSTEM Directories
############################
TCL_PREFIX=@TCL_PREFIX@
TK_PREFIX=@TK_PREFIX@
# asp/bsp
TCL_VERSION = @TCL_VERSION@

############################
# DEFAULT Compilers and Compiler flags.
############################
#CC = cc
CC = @CC@
STRIP = @STRIP@
#STD_FLAGS = -O -q32 -qchars=signed -qmaxmem=8192
STD_FLAGS = @CFLAGS@ @CSGFLAGS@ @ANSIFLAG@
EXEEXT = @EXEEXT@

############################
# Link Flags
############################
LD_FLAGS = @LD_FLAGS@
FORTLIBS = @FLIBS@

############################
# XML Dependence
############################
XML_DEF = -D_DWML_
XML_INC = -I../degrib -I../libxml/include -I../dwmllib
XML_LIB = -L../dwmllib -ldwml -L../libxml/.libs/ -lxml2
XML_DEP = ../dwmllib/libdwml.a ../libxml/.libs/libxml2.a
XML_CLEAN = (cd ../dwmllib && make -f makefile clean)

############################
# Standard Defines
############################
STD_DEF = @DSIZEOF_LONG_INT@ @DWORDS_BIGENDIAN@ @DBAD_TCLSSH@ @DWINDOWS@ $(XML_DEF) 

############################
# Do we want to watch memory?
############################
MEMWATCH=
#MEMWATCH = memwatch.o
MEMWATCH_OBJ=
#MEMWATCH_OBJ = memwatch.obj

############################
# Standard Includes
############################
STD_INC= -I../emapf-c -I../grib2lib -I../netcdf/libsrc -I../gd $(XML_INC)
TCL_INC=-I$(TCL_PREFIX)/include
TK_INC=-I$(TK_PREFIX)/include
GUI_INC=$(TCL_INC) $(TK_INC) $(STD_INC)

############################
# Standard Libraries
############################
CLOCK_LIB = -L/usr/lib -lm
DP_LIB = -L../emapf-c/ -lemapf $(XML_LIB) -L../zlib -lz -L/usr/lib -lm
DRAWSHP_LIB = -L../gd/ -lgd -L../libpng -lpng -L../zlib -lz \
          -L../emapf-c/ -lemapf -L/usr/lib -lm
STD_LIB = -L../grib2lib -lgrib2 -L../gd -lgd -L../libpng -lpng \
          $(XML_LIB) -L../zlib -lz \
          -L../jpeg2000/src/libjasper/jpc/.libs/ -ljpc \
          -L../jpeg2000/src/libjasper/base/.libs/ -lbase \
          -L../netcdf/libsrc/ -lnetcdf $(FORTLIBS) \
          -L../emapf-c/ -lemapf -L/usr/lib -lm

#TCL_LIB=-L$(TCL_PREFIX)/lib -ltcl$(TCL_VERSION)
#TK_LIB=-L$(TK_PREFIX)/lib -ltk$(TCL_VERSION)
#X_LIB=-L/usr/X11R6/lib -lX11
# DYNAMIC_LIB = -ldld

TCL_LIB = @TCL_LIBS@
TK_LIB = @TK_LIBS@
#X_LIB=@X_LIBS@ -lX11
X_LIB=@X_LIBS@
DYNAMIC_LIB = @DYNAMIC_LIB@
GUI_LIB=$(TK_LIB) $(TCL_LIB) $(X_LIB) $(DYNAMIC_LIB) $(STD_LIB)

############################
# Project names
############################
CLOCK_NAME = clock
DP_NAME = degrib_DP
DRAWSHP_NAME = drawshp
PRJ_NAME = degrib
TCL_NAME = tcldegrib
TK_NAME = tkdegrib

CFLAGS = $(STD_FLAGS) $(STD_DEF) $(STD_INC)
GUIFLAGS = $(STD_FLAGS) $(STD_DEF) $(GUI_INC)

############################
# FILES
############################
C_OBJECTS = myutil.o \
            clock.o \
            mymapf.o \
            myerror.o \
            myassert.o \
            tendian.o \
            scan.o \
            metaname.o \
            metaparse.o \
            weather.o \
            grib1tab.o \
            metaprint.o \
            writeflt.o \
            chain.o \
            writecsv.o \
            writeshp.o \
            writegra.o \
            writenc.o \
            readnc.o \
            interp.o \
            inventory.o \
            probe.o \
            userparse.o \
            tdlpack.o \
            degrib1.o \
            degrib2.o \
            pack.o \
            cube.o \
            drawgrib.o \
            commands.o \
            database.o \
            mapini.o \
            drawlib.o \
            genprobe.o \
            solar.o \
            grpprobe.o \
            sector.o

H_SOURCES = type.h \
            myutil.h \
            clock.h \
            myerror.h \
            myassert.h \
            mymapf.h \
            tendian.h \
            scan.h \
            meta.h \
            metaname.h \
            weather.h \
            chain.h \
            write.h \
            interp.h \
            inventory.h \
            probe.h \
            userparse.h \
            tdlpack.h \
            degrib1.h \
            degrib2.h \
            pack.h \
            drawgrib.h \
            commands.h \
            database.h \
            mapini.h \
            drawlib.h \
            genprobe.h \
            solar.h \
            grpprobe.h \
            sector.h

CLOCK_OBJECTS = myassert.o \
            myutil.o \
            myerror.o \
            clock.o

DP_OBJECTS = myutil.o \
            clock.o \
            mymapf.o \
            myerror.o \
            myassert.o \
            tendian.o \
            weather.o \
            interp.o \
            userparse.o \
            database.o \
            solar.o \
            grpprobe.o \
            sector.o \
            dpgenprobe.o

DRAWSHP_OBJECTS = myassert.o \
            myutil.o \
            tendian.o \
            mapini.o \
            drawlib.o

GUI_OBJECTS = $(C_OBJECTS) \
            tcldegrib.o

C_MAIN = cstart.c

GUI_MAIN = tclstart.c

CLOCK_MAIN = clockstart.c

DP_MAIN = dpstart.c

DRAWSHP_MAIN = drawshp.c

LIB_DEPENDS = ../emapf-c/libemapf.a ../grib2lib/libgrib2.a \
            ../libpng/libpng.a ../zlib/libz.a \
            ../jpeg2000/src/libjasper/jpc/.libs/libjpc.a \
            ../jpeg2000/src/libjasper/base/.libs/libbase.a \
            ../netcdf/libsrc/libnetcdf.a ../gd/libgd.a $(XML_DEP)

############################
#
# TARGETS
#
############################
all: $(PRJ_NAME) $(CLOCK_NAME) $(DP_NAME) $(DRAWSHP_NAME) $(TCL_NAME) $(TK_NAME)

$(PRJ_NAME): $(C_OBJECTS) $(C_MAIN) $(LIB_DEPENDS) $(H_SOURCES)
	$(CC) $(C_MAIN) $(CFLAGS) $(LD_FLAGS) $(C_OBJECTS) $(STD_LIB) -o $(PRJ_NAME)
	$(STRIP) -s $(PRJ_NAME)$(EXEEXT)

$(CLOCK_NAME): $(CLOCK_MAIN) $(CLOCK_OBJECTS) $(H_SOURCES)
	$(CC) $(CLOCK_MAIN) $(CFLAGS) $(CLOCK_OBJECTS) $(CLOCK_LIB) -o $(CLOCK_NAME)
	$(STRIP) -s $(CLOCK_NAME)$(EXEEXT)

$(DP_NAME): $(DP_OBJECTS) $(DP_MAIN) $(LIB_DEPENDS) $(H_SOURCES)
	$(CC) $(DP_MAIN) $(CFLAGS) $(LD_FLAGS) $(DP_OBJECTS) $(DP_LIB) -o $(DP_NAME)
	$(STRIP) -s $(DP_NAME)$(EXEEXT)

$(DRAWSHP_NAME): $(DRAWSHP_MAIN) $(DRAWSHP_OBJECTS) $(H_SOURCES)
	$(CC) $(DRAWSHP_MAIN) $(CFLAGS) $(DRAWSHP_OBJECTS) $(DRAWSHP_LIB) -o $(DRAWSHP_NAME)
	$(STRIP) -s $(DRAWSHP_NAME)$(EXEEXT)

$(TK_NAME): $(GUI_OBJECTS) $(GUI_MAIN) $(LIB_DEPENDS) $(H_SOURCES)
	$(CC) $(GUI_MAIN) $(GUIFLAGS) $(LD_FLAGS) $(GUI_OBJECTS) $(GUI_LIB) -o $(TK_NAME)
	$(STRIP) -s $(TK_NAME)$(EXEEXT)

$(TCL_NAME): $(GUI_OBJECTS) $(GUI_MAIN) $(LIB_DEPENDS) $(H_SOURCES)
	$(CC) $(GUI_MAIN) $(GUIFLAGS) -DNO_TK $(LD_FLAGS) $(GUI_OBJECTS) $(GUI_LIB) -o $(TCL_NAME)
	$(STRIP) -s $(TCL_NAME)$(EXEEXT)

install: $(PRJ_NAME) $(CLOCK_NAME) $(DP_NAME) $(DRAWSHP_NAME) $(TCL_NAME) $(TK_NAME)
	cp $(PRJ_NAME)$(EXEEXT) ../../bin
	cp $(CLOCK_NAME)$(EXEEXT) ../../bin
	cp $(DP_NAME)$(EXEEXT) ../../bin
	cp $(DRAWSHP_NAME)$(EXEEXT) ../../bin
	cp $(TCL_NAME)$(EXEEXT) ../../bin
	cp $(TK_NAME)$(EXEEXT) ../../bin

clean:
	rm -f *.o *.bak *.BAK
	rm -f $(PRJ_NAME)$(EXEEXT) $(CLOCK_NAME)$(EXEEXT) $(DP_NAME)$(EXEEXT)
	rm -f $(DRAWSHP_NAME)$(EXEEXT) $(TCL_NAME)$(EXEEXT) $(TK_NAME)$(EXEEXT)
	$(XML_CLEAN)

distclean: clean

../dwmllib/libdwml.a:
	@echo "-----------------------------"
	@echo "Attempting to compile dwmllib..."
	(cd ../dwmllib && export CC='$(CC)' && export CFLAGS='$(CFLAGS)' && make -f makefile)
	@echo "Finished with dwmllib..."
	@echo "-----------------------------"

############################
#
# SUFFIXES
#
############################
tcldegrib.o: tcldegrib.c tcldegrib.h $(H_SOURCES)
	$(CC) -c $(GUIFLAGS) $<

memwatch.o: ./memwatch/memwatch.c ./memwatch/memwatch.h
	$(CC) -c $(CFLAGS) ./memwatch/memwatch.c

dpgenprobe.o : $(H_SOURCES)
	$(CC) -c $(CFLAGS) -DDP_ONLY genprobe.c -o dpgenprobe.o

.c.o : $(H_SOURCES)
	$(CC) -c $(CFLAGS) $<

%.obj : %.c $(H_SOURCES)
	$(CC) -c $(GUIFLAGS) $(STUB_DEF) -o $@ $<

